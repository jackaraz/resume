<header class="header-overlap | stack pad-horizontal pad-vertical">
  {% set src = ["./src/", general.image] | join %}
  {% set alt = general.name %}
  {% image src, alt, "(min-width: 300px) 600px, 100vw" %}
  <h1 class="p-name | header-overlap__title" data-title="{{ general.name }}">{{ general.name }}</h1>
  <h2 class="p-job-title | header-overlap__subtitle">{{ general.job }}</h2>
</header>
